<%- include('../header.ejs') %>

<h1>Chỉnh sửa sản phẩm</h1>

<form action="/products/update" method="POST" enctype="multipart/form-data">

    <div class="mb-3 mt-3">
        <input type="hidden" hidden class="form-control" id="id" name="id" value="<%= products.id %>">
      </div>
    <div class="mb-3">
        <label for="name" class="form-label">Tên sản phẩm:</label>
        <input type="text" id="name" class="form-control" name="name" value="<%= products.name %>">
    </div>

    <div class="mb-3">
        <label for="price" class="form-label">Giá:</label>
        <input type="number" id="price" class="form-control" name="price" value="<%= products.price %>" required>
    </div>

    <div class="mb-3">
        <label for="image" class="form-label">Ảnh sản phẩm:</label>
        <input type="file"  name="image">
        <br>
        <img src="<%=products.image %>"  width="100">
    </div>

    <div class="mb-3">
        <label for="category_id" class="form-label">Loại sản phẩm:</label>
        <select name="category_id" id="category_id" class="form-select" required>
            <option value="" disabled selected>Chọn loại sản phẩm</option>
            <% cat.forEach(products => { %>
                <option value="<%= products.id%>"><%= products.name %></option>
            <% }) %>
        </select>
    </div>  
    <div class="mb-3">
        <label for="description" class="form-label">Mô tả:</label>
        <textarea id="description" class="form-control" name="description" required><%= products.description %></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật sản phẩm</button>
</form>

<%- include('../footer.ejs') %>
