<% include('../header.ejs') %>

    <h2>Sửa nhóm sản phẩm</h2>
    <form action="/update-categories" method="POST">
      <div class="form-group">
        <input type="hidden" hidden class="form-control" id="id" name="id" value="<%= cat.id %>">
      </div>
      <div class="form-group">
        <label for="name" class="form-label">Tên nhóm</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= cat.name %>">
      </div>
      <div class="form-group">
        <label class="form-label" >
              Hiển Thị
          <input type="checkbox" class="form-control" name="status" <%= cat.status ? 'checked' : '' %>>
        </label>
      </div>
      <button type="submit" class="btn btn-primary">Cập nhật</button>
      <a href="/categories" class="btn btn-dark">Trở lại</a>
    </form>

<%- include('../footer.ejs') %>
